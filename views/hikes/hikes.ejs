<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Favorite Hikes</title>
        <% include ../style%>
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <link rel="stylesheet" type="text/css" href="/css/hikeStyle.css">
    </head>
    <body>
        <% include ../header%>

        <div class="container-fluid">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h3> Hikes in your <%= list_name %> list</h3>
                <table>
                    <% hikes.forEach(function(hike) { %>
                        <tr>
                            <td>
                                <a href="<%= hike.hike_url %>"><%= hike.hike_url %></a>
                            </td>
                        </tr>
                    <% }) %>
                </table>
            </div>
            <div class="col-md-3"></div>
        </div>

        <% include ../footer%>
    </body>
</html>
